<!-- This is the main HTML template that will format all website pages as HTML and enable loading of all  pages -->
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <!-- EJS variable to allow for dynamic loading of page title depending on which website page is open.  --> 
    <title>
        <%= title%>
    </title>
    <!-- Bootstrap scripts -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <!-- Google Fonts scripts -->
    <link href="https://fonts.googleapis.com/css2?family=Titillium+Web:wght@200;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="./content/css/styles.css">
</head>

<body class="fade-in">
    <%- include('components/header'); %>
        <!-- Loading header.ejs  -->
        <%- include('content/' + page); %>
            <!-- EJS variable to allow for dynamic page loading -->
            <br><br>
            <footer class="fade-in">
                <%- include('components/footer'); %>
                    <!-- Loading footer.ejs -->
            </footer>
</body>

</html>